<Window x:Class="muzickeStolice.View.CreateOsobaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:muzickeStolice.View"
        mc:Ignorable="d"
        Title="Create Osoba" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Ime" />
            <TextBox Name="ImeTextBox" />

            <TextBlock Text="Prezime" Margin="0,10,0,0"/>
            <TextBox Name="PrezimeTextBox" />

            <TextBlock Text="Biografija" Margin="0,10,0,0"/>
            <TextBox Name="BiografijaTextBox" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Height="100"/>

            <TextBlock Text="Datum Rodjenja" Margin="0,10,0,0"/>
            <DatePicker Name="DatumRodjenjaPicker" />

            <TextBlock Text="Slika URL" Margin="0,10,0,0"/>
            <TextBox Name="SlikaUrlTextBox" />

            <Button Name="CreateButton" Content="Create" Margin="0,10,0,0" Click="CreateButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
