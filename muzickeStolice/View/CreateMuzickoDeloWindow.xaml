<Window x:Class="muzickeStolice.CreateMuzickoDeloWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Music Work" Height="400" Width="600">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Naziv" />
            <TextBox Name="NazivTextBox" />

            <TextBlock Text="Zanr" Margin="0,10,0,0"/>
            <ComboBox Name="ZanrComboBox" />

            <TextBlock Text="Opis" Margin="0,10,0,0"/>
            <TextBox Name="OpisTextBox" />

            <TextBlock Text="Tip" Margin="0,10,0,0"/>
            <ComboBox Name="TipComboBox">
                <ComboBoxItem Content="Album" />
                <ComboBoxItem Content="AlbumUzivo" />
                <ComboBoxItem Content="EP" />
                <ComboBoxItem Content="Kompilacija" />
                <ComboBoxItem Content="Singl" />
                <ComboBoxItem Content="Demo" />
                <ComboBoxItem Content="Mixtape" />
            </ComboBox>

            <TextBlock Text="Slike Linkovi (comma-separated)" Margin="0,10,0,0"/>
            <TextBox Name="SlikeLinkoviTextBox" />

            <Button Name="SelectIzvodjaciButton" Content="Select Performers" Margin="0,10,0,0" Click="SelectIzvodjaciButton_Click"/>

            <Button Name="CreateButton" Content="Create" Margin="0,10,0,0" Click="CreateButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
