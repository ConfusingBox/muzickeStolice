<Window x:Class="muzickeStolice.View.RecenzijaCRUD"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:muzickeStolice.View"
        mc:Ignorable="d"
        Title="RecenzijaCRUD" Height="319" Width="376">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="31*"/>
            <RowDefinition Height="272*"/>
        </Grid.RowDefinitions>
        <TextBox Name="tbTekst" ScrollViewer.VerticalScrollBarVisibility="Auto"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 HorizontalAlignment="Stretch" TextAlignment="Left"
                 VerticalAlignment="Stretch" Grid.Row="1" TextWrapping="Wrap" />
        <Button Name="bObrisi" Content="Obrisi recenziju" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" Click="bObrisi_Click"/>
        <Button Name="bPostavi" Content="Postavi recenziju" HorizontalAlignment="Left" Margin="274,0,0,0" VerticalAlignment="Center" Click="bPostavi_Click"/>
        <Label Name="lStanje" Content="Stanje: " HorizontalAlignment="Left" Margin="121,0,0,0" VerticalAlignment="Center"/>

    </Grid>
</Window>
