<Window x:Class="muzickeStolice.View.MuzickoDeloDetalji"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:muzickeStolice.View"
        mc:Ignorable="d"
        Title="MuzickoDeloDetalji" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="128*"/>
            <RowDefinition Height="89*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="259*"/>
            <ColumnDefinition Width="290*"/>
            <ColumnDefinition Width="251*"/>
        </Grid.ColumnDefinitions>
        <ScrollViewer Grid.RowSpan="2">
            <StackPanel Name="spSlike"/>
        </ScrollViewer>
        <Label Grid.Column="1" Content="Naziv:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox Name="tbNaziv" IsEnabled="False" Grid.Column="1" HorizontalAlignment="Left" Margin="57,14,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Grid.Column="1" Content="Zanr:" HorizontalAlignment="Left" Margin="10,33,0,0" VerticalAlignment="Top"/>
        <TextBox Name="tbZanr" IsEnabled="False" Grid.Column="1" HorizontalAlignment="Left" Margin="57,37,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Grid.Column="1" Content="Opis:" HorizontalAlignment="Left" Margin="10,56,0,0" VerticalAlignment="Top"/>
        <TextBox Name="tbOpis" IsEnabled="False" Grid.Column="1" HorizontalAlignment="Left" Margin="10,81,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="167" Height="110"/>
        <ScrollViewer Grid.Column="1" Grid.Row="1">
            <StackPanel Name="spIzvodjaci">
                <Label Content="Izvodjaci"></Label>
            </StackPanel>
        </ScrollViewer>
        <ComboBox Name="cbOcena" Grid.Column="1" HorizontalAlignment="Left" Margin="81,201,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Grid.Column="1" Content="Vasa ocena:" HorizontalAlignment="Left" Margin="10,199,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
