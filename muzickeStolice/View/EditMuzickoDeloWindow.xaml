<Window x:Class="muzickeStolice.View.EditMuzickoDeloWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Music Work" Height="450" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Naziv" />
            <TextBox x:Name="NazivTextBox" Margin="0,5" />

            <TextBlock Text="Zanr" Margin="0,10,0,0" />
            <ComboBox x:Name="ZanrComboBox" Margin="0,5">
                <!-- Populate ComboBox items here -->
            </ComboBox>

            <TextBlock Text="Opis" Margin="0,10,0,0" />
            <TextBox x:Name="OpisTextBox" Margin="0,5" />

            <TextBlock Text="Tip" Margin="0,10,0,0" />
            <ComboBox x:Name="TipComboBox" Margin="0,5">
                <ComboBoxItem Content="Album" />
                <ComboBoxItem Content="AlbumUzivo" />
                <ComboBoxItem Content="EP" />
                <ComboBoxItem Content="Kompilacija" />
                <ComboBoxItem Content="Singl" />
                <ComboBoxItem Content="Demo" />
                <ComboBoxItem Content="Mixtape" />
            </ComboBox>

            <TextBlock Text="Slike Linkovi (comma-separated)" Margin="0,10,0,0" />
            <TextBox x:Name="SlikeLinkoviTextBox" Margin="0,5" />

            <Button Content="Save" Click="SaveButton_Click" Margin="0,20,0,0" />
        </StackPanel>
    </Grid>
</Window>
