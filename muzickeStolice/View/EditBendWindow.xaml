<Window x:Class="muzickeStolice.View.EditBendWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Bend" Height="400" Width="600">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Naziv" />
            <TextBox Name="NazivTextBox" />

            <TextBlock Text="Opis" Margin="0,10,0,0"/>
            <TextBox Name="OpisTextBox" />

            <TextBlock Text="Datum Osnivanja" Margin="0,10,0,0"/>
            <DatePicker Name="DatumOsnivanjaPicker" />

            <TextBlock Text="Slike Linkovi (comma-separated)" Margin="0,10,0,0"/>
            <TextBox Name="SlikeLinkoviTextBox" />

            <Button Name="SelectClanoviButton" Content="Select Performers" Margin="0,10,0,0" Click="SelectClanoviButton_Click"/>

            <Button Name="SaveButton" Content="Save" Margin="0,10,0,0" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
