<Window x:Class="muzickeStolice.View.VerificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Verification" Height="256" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="Verification Code:" Grid.Row="2" Margin="0,10,0,5" VerticalAlignment="Center" />
        <TextBox x:Name="VerificationCodeTextBox" Grid.Row="3" Margin="0,5" />

        <Button Content="Verify" Grid.Row="3" Margin="0,41,0,-21" Click="VerifyButton_Click" />
    </Grid>
</Window>
